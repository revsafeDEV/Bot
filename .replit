run = "npm start"
entrypoint = "index.js"
modules = ["nodejs-18"]

[nix]
channel = "stable-22_11"

[deployment]
run = ["sh", "-c", "npm start"]

[[ports]]
localPort = 8080
externalPort = 80

[languages]

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"

[languages.javascript.languageServer]
start = "typescript-language-server --stdio"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json"]

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false
